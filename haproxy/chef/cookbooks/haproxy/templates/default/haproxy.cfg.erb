global
  chroot  /var/lib/haproxy
  daemon  
  group  haproxy
  log  127.0.0.1 local6
  maxconn  4000
  pidfile  /var/run/haproxy.pid
  stats  socket /var/lib/haproxy/stats
  user  haproxy

defaults
  log  global
  maxconn  8000
  mode  http
  option  redispatch
  retries  3
  timeout  http-request 10s
  timeout  queue 1m
  timeout  connect 10s
  timeout  client 1m
  timeout  server 1m
  timeout  check 10s

listen admin
  bind <%= @admin_ip %>:83
  stats enable
  stats auth haproxy:pass
  mode http
  stats hide-version
  stats realm Haproxy\ Statistics
  stats uri /

listen horizon
  bind <%= @public_ip %>:80
  balance  roundrobin
  capture  cookie vgnvisitor= len 32
  cookie  SERVERID insert indirect nocache
  option  forwardfor
  option  httpchk
  option  httpclose
  option  httplog
  rspidel  ^Set-cookie:\ IP=
  server <%= @admincont1 %> <%= @cont1_admin_ip %>:80   cookie <%= @admincont1 %>  check inter 2000 rise 1 fall 3  
  server <%= @admincont2 %> <%= @cont2_admin_ip %>:80   cookie <%= @admincont2 %>  check inter 2000 rise 1 fall 3  
  server <%= @admincont3 %> <%= @cont3_admin_ip %>:80   cookie <%= @admincont3 %>  check inter 2000 rise 1 fall 3  
  

